{
	"manifest_version": 3,
	"minimum_chrome_version": "88",
	"name": "__MSG_ext_name__",
	"short_name": "smartUp",
	"version": "7.1.1225.1162",
	"description": "__MSG_ext_des__",
	"default_locale": "en",
	"author": "zimo",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
			"js": [
				"js/event.js"
			],
			"matches": [
				"<all_urls>"
			],
			"run_at": "document_start",
			"all_frames": true,
			"match_about_blank": true
		}
	],
	"action": {
		"default_icon": {
			"19": "icon.png",
			"38": "icon.png"
		},
		"default_title": "smartUp",
		"default_popup": "html/popup.html"
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "html/options.html"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"image/*",
				"icon.png"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"permissions": [
		"tabs",
		"notifications",
		"storage",
		"contextMenus",
		"tts",
        "scripting",
        "tabCapture"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"optional_permissions": [
		"downloads",
		"downloads.shelf",
		"clipboardRead",
		"clipboardWrite",
		"bookmarks",
		"history",
		"management",
		"sessions",
		"pageCapture",
		"topSites"
	]
}